{
  "name": "Ptt Imgur fix",
  "description": "修正 Ptt 網頁版 Imgur 圖片顯示",
  "version": "1.1.1",
  "icons": {
    "48": "icon/48.png",
    "128": "icon/128.png",
    "256": "icon/256.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://imgur.com/*/embed*",
    "https://api.imgur.com/3/*",
    "https://www.ptt.cc/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://www.ptt.cc/*.html"],
      "js": ["userscript.js"]
    }
  ],
  "manifest_version": 2
}
